.container.row
  - @categories.each do |category|
    .outercard.mx-auto.col-xs-11.col-sm-6.col-lg-4
      .card.first
        -# = link_to quiz_path(@quiz), method: :get, class: ".card.first"
        .card-header 
          =category.category_name
        .card-body
          %h5.card-title 
          %p.card-text 
            = category.category_name
          = link_to quiz_path(category) do
            %p.card-text 
              問題を解く
%ul.menu
  %li.find-by-category
    %a.category-top{:href => "#"} カテゴリーから探す
    %ul.category-first.hidden-ul
      / 第一階層
      - @categories.each do |category|
        %li
          = link_to "" do
            = category.category_name
          %ul.category-second.hidden-ul
            / 第二階層
            - category.children.each do |child|
              %li
                = link_to "" do
                  = child.category_name
                %ul.category-third.hidden-ul
                  / 第三階層
                  - child.children.each do |grandchild|
                    %li
                      = link_to "" do
                        = grandchild.category_name
